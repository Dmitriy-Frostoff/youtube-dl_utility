{
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  // Runs Prettier, then ESLint
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  // disable Vetur extension validating
  "vetur.validation.template": false,
  // ESLint settings
  "eslint.options": {
    "overrideConfigFile": "./configs/eslint/.eslintrc.cjs",
    "ignorePath": "./configs/eslint/.eslintignore"
  },
  // Prettier settings
  "prettier.configPath": "./configs/prettier/prettier.config.js",
  "prettier.ignorePath": "./configs/prettier/.prettierignore",
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "files.eol": "\n"
}
